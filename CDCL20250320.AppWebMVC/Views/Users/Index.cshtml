@model IEnumerable<CDCL20250320.AppWebMVC.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuario</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-success">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-primary">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>



