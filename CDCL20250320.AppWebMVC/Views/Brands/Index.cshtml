@model IEnumerable<CDCL20250320.AppWebMVC.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h1>Marcas</h1>

<form asp-action="Index">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Marcas</label>
                <select name="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
        </div>
       
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <input type="submit" value="Buscar" class="btn btn-primary" />
            <a class="btn btn-info" asp-action="Create">Ir a crear</a>
        </div>
    </div>
</form>


<p>
    <a asp-action="Create" class="btn btn-secondary">Crear una nueva marca</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-success">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-primary">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>



